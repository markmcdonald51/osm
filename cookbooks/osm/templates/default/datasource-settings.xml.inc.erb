<!--
Settings for your postgres setup.

Note: feel free to leave password, host, port, or use blank
-->

<Parameter name="type">postgis</Parameter>
<% unless @config[:psql][:password].nil? %>
<Parameter name="password"><%= @config[:psql][:password] %></Parameter>
<% end %>
<% unless @config[:psql][:host].nil? %>
<Parameter name="host"><%= @config[:psql][:host] %></Parameter>
<% end %>
<% unless @config[:psql][:port].nil? %>
<Parameter name="port"><%= @config[:psql][:port] %></Parameter>
<% end %>
<% unless @config[:psql][:user].nil? %>
<Parameter name="user"><%= @config[:psql][:user] %></Parameter>
<% end %>
<% unless @config[:psql][:dbname].nil? %>
<Parameter name="dbname"><%= @config[:psql][:dbname] %></Parameter>
<% end %>
<!-- this should be 'false' if you are manually providing the 'extent' -->
<Parameter name="estimate_extent"><%= @config[:estimate_extent] %></Parameter>
<!-- manually provided extent in epsg 900913 for whole globe -->
<!-- providing this speeds up Mapnik database queries -->
<Parameter name="extent"><%= @config[:extent] %></Parameter>
